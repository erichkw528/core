<?xml version="1.0"?>
<robot name="gokart" xmlns:xacro="http://ros.org/wiki/xacro">
	<include filename="$(find roar-urdf)/src/gokart/_inertias.urdf" />
	<!-- Define the size of the robot's main chassis in meters -->
	<property name="base_width" value="0.95" />
	<property name="base_length" value="1.05" />
	<property name="base_height" value="0.015" />
	<property name="body_frame_x_offset" value="0.525" />
	<property name="body_mass" value="72.5" />
	<!-- kg -->
	<!-- Define the shape of the car's wheel in meters -->
	<property name="wheel_radius" value="0.1397" />
	<property name="wheel_width" value="0.09525" />
	<!-- 0.1905 -->
	<property name="wheel_base" value="1.0" />
	<!-- 0.1905 -->
	<!-- Define distance from the wheel to the steering hinge -->
	<property name="steering_hinge_offset" value="0.02" />
	<!-- Define height of the sensor platform measuring from the base_link -->
	<property name="sensor_platform_height" value="0.5" />
	<property name="front_lidar_forward_offset" value="0.045" />
	<property name="side_lidar_offset" value="0.12" />
	<property name="zed_width" value="0.032" />
	<property name="zed_length" value="0.175" />
	<property name="zed_height" value="0.03" />
	<property name="lidar_width" value="0.077" />
	<property name="lidar_length" value="0.116" />
	<property name="lidar_height" value="0.090" />
	<property name="camera_width" value="0.029" />
	<property name="camera_length" value="0.097" />
	<property name="camera_height" value="0.030" />
	<!-- gps with respect to base_link -->
	<property name="rear_gps_x" value="0.0" />
	<property name="rear_gps_y" value="0.0" />
	<property name="rear_gps_z" value="0.3" />
	<property name="front_gps_x" value="${wheel_base/2}" />
	<property name="front_gps_y" value="0.0" />
	<property name="front_gps_z" value="0.3" />
	<link name="base_link">
	</link>
	<include filename="$(find roar-urdf)/src/gokart/_body_frame.urdf" />
	<include filename="$(find roar-urdf)/src/gokart/_wheels.urdf" />
	<include filename="$(find roar-urdf)/src/gokart/_perception_platform.urdf" />
	<include filename="$(find roar-urdf)/src/gokart/_perceptions.urdf" />
	<include filename="$(find roar-urdf)/src/gokart/_ackermann.urdf" />
	<include filename="$(find roar-urdf)/src/gokart/_gnss.urdf" />
	<include filename="$(find roar-urdf)/src/gokart/_compute_units.urdf" />
	<!-- <xacro:include filename="$(find roar-urdf)/src/gokart/_imu.urdf" /> -->
	<!-- <xacro:include filename="$(find roar-urdf)/src/gokart/_camera.urdf" /> -->
</robot>
